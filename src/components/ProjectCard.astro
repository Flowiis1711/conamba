---
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const { name, img, altImg, shortName } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="project relative cursor-pointer w-[100%] md:w-[30%]">
  <picture>
    <source srcset={`/projects${img}.webp`} type="image/webp" />
    <img class="project-img" src={`/projects${img}.jpg`} alt={altImg} />
  </picture>
  <a
    title={`${t("project.detail")} - ${name}`}
    class="project-name text-3xl md:text-xl lg:text-3xl"
    href={`projects/${shortName}`}
    class="text-center">{name}</a
  >
</div>

<style>
  .project:hover a {
    opacity: 1;
    transition: all 0.4s;
  }

  .project-name {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    color: white;
    background-color: rgba(0, 0, 0, 0.505);
    opacity: 0;
    text-align: center;
  }

  .project-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: relative;
    cursor: pointer;
    outline: 2px white solid;
    outline-offset: -10px;
  }
</style>
