---
import Splider from "./Splider.astro";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const { title, location, startYear, endYear, sponsor, images } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  class="bg-white py-[2rem] px-2 w-11/12 m-auto my-5 max-w-screen-lg md:w-10/12 md:py-[4rem] md:px-[2rem] md:my-20"
>
  <div class="m-auto w-11/12 flex flex-col md:w-[10/12]">
    <h1 class="text-2xl font-semibold uppercase mb-[2rem] md:text-4xl">
      {title}
    </h1>
    <div class="flex gap-2 text-lg">
      <span class="font-semibold">{t("project.location")}: </span>
      <span>{location}</span>
    </div>
    <div class="flex gap-2 text-lg">
      <span class="font-semibold">{t("project.startYear")}: </span>
      <span>{startYear}</span>
    </div>
    <div class="flex gap-2 text-lg">
      <span class="font-semibold">{t("project.endYear")}: </span>
      <span>{endYear}</span>
    </div>
    <div class="flex gap-2 text-lg">
      <span class="font-semibold">{t("project.sponsor")}: </span>
      <span>{sponsor}</span>
    </div>
    <Splider images={images} />
  </div>
</div>
